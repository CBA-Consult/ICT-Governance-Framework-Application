# Enterprise Connectors Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# Azure Active Directory Configuration
# =============================================================================
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id

# =============================================================================
# ServiceNow ITSM Configuration
# =============================================================================
SERVICENOW_INSTANCE_URL=https://your-instance.service-now.com
SERVICENOW_USERNAME=your-servicenow-username
SERVICENOW_PASSWORD=your-servicenow-password

# =============================================================================
# SAP S/4HANA ERP Configuration
# =============================================================================
SAP_BASE_URL=https://your-sap-server:8000
SAP_USERNAME=your-sap-username
SAP_PASSWORD=your-sap-password
SAP_SYSTEM_ID=your-sap-system-id
SAP_CLIENT=100

# =============================================================================
# Salesforce CRM Configuration
# =============================================================================
SALESFORCE_CLIENT_ID=your-salesforce-connected-app-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-connected-app-client-secret
SALESFORCE_LOGIN_URL=https://login.salesforce.com
# For sandbox environments, use: https://test.salesforce.com

# =============================================================================
# Workday HCM Configuration
# =============================================================================
WORKDAY_BASE_URL=https://your-tenant.workday.com
WORKDAY_USERNAME=your-workday-integration-username
WORKDAY_PASSWORD=your-workday-integration-password
WORKDAY_TENANT=your-workday-tenant-name

# =============================================================================
# Azure Synapse Analytics Configuration
# =============================================================================
SYNAPSE_WORKSPACE_NAME=your-synapse-workspace-name
SYNAPSE_RESOURCE_GROUP=your-synapse-resource-group

# =============================================================================
# Microsoft Sentinel Configuration
# =============================================================================
SENTINEL_RESOURCE_GROUP=your-sentinel-resource-group
SENTINEL_WORKSPACE_NAME=your-sentinel-workspace-name

# =============================================================================
# Power BI Configuration
# =============================================================================
POWERBI_CLIENT_ID=your-powerbi-app-client-id
POWERBI_CLIENT_SECRET=your-powerbi-app-client-secret

# =============================================================================
# Oracle Database Configuration
# =============================================================================
ORACLE_HOST=your-oracle-database-host
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=your-oracle-service-name
ORACLE_USERNAME=your-oracle-username
ORACLE_PASSWORD=your-oracle-password
ORACLE_CONNECTION_STRING=your-oracle-host:1521/your-service-name

# =============================================================================
# Amazon Web Services Configuration
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_SESSION_TOKEN=your-aws-session-token-if-using-temporary-credentials

# =============================================================================
# Google Cloud Platform Configuration
# =============================================================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_KEY_FILE=path/to/your/service-account-key.json
GCP_REGION=us-central1

# =============================================================================
# Legacy Systems Configuration
# =============================================================================
LEGACY_SFTP_HOST=your-legacy-sftp-host
LEGACY_SFTP_PORT=22
LEGACY_SFTP_USERNAME=your-sftp-username
LEGACY_SFTP_PASSWORD=your-sftp-password
LEGACY_SFTP_PRIVATE_KEY_PATH=path/to/your/private-key.pem

# Mainframe Connection Settings
MAINFRAME_HOST=your-mainframe-host
MAINFRAME_PORT=23
MAINFRAME_USERNAME=your-mainframe-username
MAINFRAME_PASSWORD=your-mainframe-password

# =============================================================================
# Integration Framework Configuration
# =============================================================================

# Global Settings
INTEGRATION_TIMEOUT=30000
INTEGRATION_MAX_RETRIES=3
INTEGRATION_RETRY_DELAY=1000
INTEGRATION_ENABLE_METRICS=true
INTEGRATION_ENABLE_CACHING=true
INTEGRATION_CACHE_TTL=300
INTEGRATION_LOG_LEVEL=info

# Circuit Breaker Settings
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security Settings
ENCRYPTION_ENABLED=true
TLS_VERSION=1.2
CERTIFICATE_VALIDATION=true
TOKEN_ROTATION_INTERVAL=3600000
AUDIT_LOGGING=true
SENSITIVE_DATA_MASKING=true

# =============================================================================
# Monitoring and Alerting Configuration
# =============================================================================

# Health Check Settings
HEALTH_CHECK_INTERVAL=300000
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_ENABLED=true

# Metrics Collection
METRICS_RETENTION_PERIOD=2592000000
METRICS_COLLECTION_INTERVAL=60000
METRICS_EXPORT_ENABLED=true

# Alerting Configuration
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_RECIPIENTS=admin@company.com,governance@company.com
ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook

# =============================================================================
# Database Configuration for Connector Metadata
# =============================================================================
CONNECTOR_DB_HOST=localhost
CONNECTOR_DB_PORT=5432
CONNECTOR_DB_NAME=ict_governance
CONNECTOR_DB_USERNAME=postgres
CONNECTOR_DB_PASSWORD=your-database-password
CONNECTOR_DB_SSL=true

# =============================================================================
# Additional Service Configurations
# =============================================================================

# Microsoft Graph API
GRAPH_API_VERSION=v1.0
GRAPH_API_BASE_URL=https://graph.microsoft.com

# Azure Management API
AZURE_MANAGEMENT_API_VERSION=2023-02-01
AZURE_MANAGEMENT_BASE_URL=https://management.azure.com

# ServiceNow API Version
SERVICENOW_API_VERSION=v1
SERVICENOW_TABLE_API_VERSION=v1

# SAP OData API Version
SAP_ODATA_VERSION=v2
SAP_CSRF_TOKEN_REQUIRED=true

# Salesforce API Version
SALESFORCE_API_VERSION=v58.0

# Workday API Version
WORKDAY_API_VERSION=v1

# =============================================================================
# Development and Testing Configuration
# =============================================================================

# Development Mode
NODE_ENV=development
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false

# Testing Configuration
TEST_MODE=false
TEST_DATA_PATH=./test-data
INTEGRATION_TESTS_ENABLED=true

# =============================================================================
# Performance Tuning
# =============================================================================

# Connection Pool Settings
CONNECTION_POOL_SIZE=10
CONNECTION_POOL_TIMEOUT=30000
CONNECTION_KEEP_ALIVE=true

# Request Optimization
REQUEST_COMPRESSION=true
REQUEST_TIMEOUT=30000
RESPONSE_CACHE_SIZE=100

# Batch Processing
BATCH_SIZE=100
BATCH_TIMEOUT=300000
PARALLEL_PROCESSING=true
MAX_CONCURRENT_REQUESTS=50

# =============================================================================
# Compliance and Governance
# =============================================================================

# Data Retention
DATA_RETENTION_PERIOD=2592000000
LOG_RETENTION_PERIOD=7776000000
AUDIT_RETENTION_PERIOD=31536000000

# Compliance Reporting
COMPLIANCE_REPORTING_ENABLED=true
COMPLIANCE_REPORT_SCHEDULE=0 0 * * *
COMPLIANCE_REPORT_RECIPIENTS=compliance@company.com

# Data Classification
DATA_CLASSIFICATION_ENABLED=true
PII_DETECTION_ENABLED=true
SENSITIVE_DATA_ENCRYPTION=true