{
  "version": "2.0.0",
  "framework": {
    "name": "CBA Consult Unified Governance Platform",
    "version": "4.0.0",
    "description": "Unified governance platform integrating all governance tools and systems"
  },
  "unifiedPlatform": {
    "enabled": true,
    "apiGateway": {
      "endpoint": "https://governance-api.company.com/v2",
      "authentication": {
        "type": "AzureAD",
        "tenantId": "your-tenant-id",
        "clientId": "your-client-id",
        "scopes": ["governance.read", "governance.write", "governance.admin"]
      }
    },
    "domains": {
      "ictGovernance": {
        "enabled": true,
        "endpoint": "/ict-governance",
        "integration": "native"
      },
      "azureGovernance": {
        "enabled": true,
        "endpoint": "/azure",
        "integration": "native"
      },
      "multiCloudGovernance": {
        "enabled": true,
        "endpoint": "/multi-cloud",
        "integration": "api"
      },
      "applicationGovernance": {
        "enabled": true,
        "endpoint": "/applications",
        "integration": "api"
      },
      "securityGovernance": {
        "enabled": true,
        "endpoint": "/security",
        "integration": "api"
      }
    }
  },
  "organization": {
    "name": "CBA Consult",
    "code": "cba",
    "costCenter": "IT-12345",
    "owner": "ICT Governance Team"
  },
  "authentication": {
    "useManagedIdentity": false,
    "servicePrincipal": true,
    "tenantId": "your-tenant-id",
    "clientId": "your-client-id",
    "clientSecret": "env:AZURE_CLIENT_SECRET"
  },
  "environments": {
    "Dev": {
      "subscriptionId": "dev-subscription-id",
      "resourceGroupName": "rg-ictgov-dev",
      "location": "East US",
      "tags": {
        "Environment": "Development",
        "Owner": "ICT Governance Team",
        "CostCenter": "IT-12345",
        "Application": "ICT Governance Framework",
        "ManagedBy": "Automation"
      }
    },
    "Test": {
      "subscriptionId": "test-subscription-id",
      "resourceGroupName": "rg-ictgov-test",
      "location": "East US",
      "tags": {
        "Environment": "Test",
        "Owner": "ICT Governance Team",
        "CostCenter": "IT-12345",
        "Application": "ICT Governance Framework",
        "ManagedBy": "Automation"
      }
    },
    "Prod": {
      "subscriptionId": "prod-subscription-id",
      "resourceGroupName": "rg-ictgov-prod",
      "location": "East US",
      "tags": {
        "Environment": "Production",
        "Owner": "ICT Governance Team",
        "CostCenter": "IT-12345",
        "Application": "ICT Governance Framework",
        "ManagedBy": "Automation"
      }
    }
  },
  "policies": [
    {
      "name": "require-resource-tags",
      "displayName": "Require Resource Tags",
      "definitionName": "1e30110a-5ceb-460c-a204-c1c3969c6d62",
      "parameters": {
        "tagName": {
          "value": "Environment"
        }
      }
    },
    {
      "name": "allowed-locations",
      "displayName": "Allowed Locations",
      "definitionName": "e56962a6-4747-49cd-b67b-bf8b01975c4c",
      "parameters": {
        "listOfAllowedLocations": {
          "value": [
            "East US",
            "East US 2",
            "West US",
            "West US 2"
          ]
        }
      }
    },
    {
      "name": "require-https-storage",
      "displayName": "Require HTTPS for Storage Accounts",
      "definitionName": "404c3081-a854-4457-ae30-26a93ef643f9",
      "parameters": {}
    },
    {
      "name": "require-sql-encryption",
      "displayName": "Require SQL Database Encryption",
      "definitionName": "17k78e20-9358-41c9-923c-fb736d382a12",
      "parameters": {}
    }
  ],
  "monitoring": {
    "alerts": [
      {
        "name": "high-cpu-usage",
        "description": "Alert when CPU usage exceeds 80%",
        "severity": 2,
        "query": "Perf | where CounterName == \"% Processor Time\" | where CounterValue > 80",
        "timeAggregation": "Average",
        "threshold": 80,
        "operator": "GreaterThan"
      },
      {
        "name": "policy-compliance-violation",
        "description": "Alert when policy compliance drops below 95%",
        "severity": 1,
        "query": "PolicyInsights | where ComplianceState == \"NonCompliant\"",
        "timeAggregation": "Count",
        "threshold": 5,
        "operator": "GreaterThan"
      },
      {
        "name": "security-incident",
        "description": "Alert on security incidents",
        "severity": 0,
        "query": "SecurityEvent | where EventID in (4625, 4648, 4719)",
        "timeAggregation": "Count",
        "threshold": 1,
        "operator": "GreaterThan"
      }
    ],
    "healthChecks": [
      {
        "name": "log-analytics-workspace",
        "type": "LogAnalytics",
        "endpoint": "workspace-endpoint",
        "timeout": 30
      },
      {
        "name": "key-vault",
        "type": "KeyVault",
        "endpoint": "keyvault-endpoint",
        "timeout": 30
      },
      {
        "name": "storage-account",
        "type": "Storage",
        "endpoint": "storage-endpoint",
        "timeout": 30
      }
    ],
    "performanceMetrics": [
      {
        "name": "response-time",
        "unit": "milliseconds",
        "threshold": 1000
      },
      {
        "name": "availability",
        "unit": "percentage",
        "threshold": 99.9
      },
      {
        "name": "error-rate",
        "unit": "percentage",
        "threshold": 1
      }
    ]
  },
  "automation": {
    "runbooks": [
      {
        "name": "compliance-check",
        "description": "Automated compliance checking",
        "type": "PowerShell",
        "schedule": "Daily"
      },
      {
        "name": "automated-remediation",
        "description": "Automated remediation of compliance violations",
        "type": "PowerShell",
        "schedule": "Daily",
        "script": "./azure-automation/Automated-Remediation-Framework.ps1"
      },
      {
        "name": "resource-cleanup",
        "description": "Cleanup unused resources",
        "type": "PowerShell",
        "schedule": "Weekly"
      },
      {
        "name": "backup-verification",
        "description": "Verify backup completion",
        "type": "PowerShell",
        "schedule": "Daily"
      }
    ],
    "schedules": [
      {
        "name": "daily-compliance-check",
        "frequency": "Daily",
        "startTime": "02:00",
        "runbook": "compliance-check"
      },
      {
        "name": "daily-automated-remediation",
        "frequency": "Daily",
        "startTime": "03:00",
        "runbook": "automated-remediation"
      },
      {
        "name": "weekly-cleanup",
        "frequency": "Weekly",
        "startTime": "01:00",
        "dayOfWeek": "Sunday",
        "runbook": "resource-cleanup"
      },
      {
        "name": "daily-backup-check",
        "frequency": "Daily",
        "startTime": "06:00",
        "runbook": "backup-verification"
      }
    ]
  },
  "compliance": {
    "reports": [
      {
        "name": "policy-compliance-summary",
        "description": "Summary of policy compliance across all resources",
        "frequency": "Daily",
        "recipients": [
          "governance-team@company.com"
        ]
      },
      {
        "name": "security-compliance-report",
        "description": "Security compliance status report",
        "frequency": "Weekly",
        "recipients": [
          "security-team@company.com",
          "governance-team@company.com"
        ]
      },
      {
        "name": "cost-optimization-report",
        "description": "Cost optimization opportunities report",
        "frequency": "Monthly",
        "recipients": [
          "finance-team@company.com",
          "governance-team@company.com"
        ]
      }
    ],
    "standards": [
      {
        "name": "ISO 27001",
        "description": "Information Security Management",
        "controls": [
          "A.12.1.2",
          "A.12.6.1",
          "A.14.2.2"
        ]
      },
      {
        "name": "NIST Cybersecurity Framework",
        "description": "NIST CSF Implementation",
        "controls": [
          "ID.AM-1",
          "PR.AC-1",
          "DE.CM-1"
        ]
      },
      {
        "name": "COBIT 2019",
        "description": "Control Objectives for IT",
        "controls": [
          "APO01",
          "APO03",
          "DSS05"
        ]
      }
    ]
  },
  "maintenance": {
    "logRetentionDays": 90,
    "backupRetentionDays": 365,
    "cleanupSchedule": "Weekly",
    "updateSchedule": "Monthly",
    "assessmentSchedule": "Quarterly"
  },
  "notifications": {
    "email": {
      "enabled": true,
      "smtpServer": "smtp.company.com",
      "fromAddress": "governance-automation@company.com",
      "recipients": {
        "governance": [
          "governance-team@company.com"
        ],
        "security": [
          "security-team@company.com"
        ],
        "operations": [
          "operations-team@company.com"
        ]
      }
    },
    "teams": {
      "enabled": true,
      "webhookUrl": "https://company.webhook.office.com/webhookb2/...",
      "channels": {
        "governance": "governance-alerts",
        "security": "security-alerts",
        "operations": "operations-alerts"
      }
    }
  },
  "integration": {
    "unifiedPlatform": {
      "enabled": true,
      "apiEndpoint": "https://governance-api.company.com/v2",
      "authentication": "ManagedIdentity",
      "dataSync": {
        "enabled": true,
        "frequency": "real-time",
        "batchSize": 100
      }
    },
    "servicenow": {
      "enabled": true,
      "endpoint": "https://company.service-now.com",
      "authentication": "OAuth2",
      "integration": "unified-api"
    },
    "jira": {
      "enabled": true,
      "endpoint": "https://company.atlassian.net",
      "authentication": "ApiToken",
      "integration": "unified-api"
    },
    "slack": {
      "enabled": true,
      "webhookUrl": "https://hooks.slack.com/services/...",
      "integration": "unified-api",
      "channels": {
        "governance": "#governance",
        "security": "#security",
        "operations": "#operations"
      }
    },
    "siem": {
      "enabled": true,
      "type": "Microsoft Sentinel",
      "endpoint": "https://sentinel.azure.com",
      "authentication": "ManagedIdentity",
      "integration": "unified-api"
    },
    "cloudAppSecurity": {
      "enabled": true,
      "type": "Microsoft Defender for Cloud Apps",
      "endpoint": "https://portal.cloudappsecurity.com",
      "authentication": "ApiKey",
      "integration": "unified-api"
    }
  },
  "features": {
    "autoRemediation": {
      "enabled": true,
      "approvalRequired": true,
      "maxActions": 50,
      "configPath": "./azure-automation/remediation-config.json",
      "supportedViolationTypes": [
        "MissingTags",
        "SecurityConfiguration",
        "BackupConfiguration",
        "CostOptimization",
        "NamingConvention"
      ],
      "expansionPhases": {
        "phase1": {
          "description": "Low-risk violations only",
          "violationTypes": ["MissingTags"],
          "autoRemediable": true
        },
        "phase2": {
          "description": "Security configurations",
          "violationTypes": ["MissingTags", "SecurityConfiguration"],
          "autoRemediable": true
        },
        "phase3": {
          "description": "Backup and cost optimization",
          "violationTypes": ["MissingTags", "SecurityConfiguration", "BackupConfiguration", "CostOptimization"],
          "autoRemediable": false
        },
        "phase4": {
          "description": "Full coverage",
          "violationTypes": ["All"],
          "autoRemediable": false
        }
      }
    },
    "costOptimization": {
      "enabled": true,
      "thresholds": {
        "unusedResources": 30,
        "oversizedResources": 20
      }
    },
    "securityScanning": {
      "enabled": true,
      "frequency": "Daily",
      "tools": [
        "Azure Security Center",
        "Azure Defender"
      ]
    },
    "complianceReporting": {
      "enabled": true,
      "frequency": "Daily",
      "formats": [
        "JSON",
        "CSV",
        "PDF"
      ]
    }
  }
}